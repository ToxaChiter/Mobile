<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="25dp"
    android:background="@color/black">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Lab1(Zamaletdinov Danil)"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="25pt"
        android:inputType="text"
        android:gravity="right|center"
        android:layout_weight="1"
        android:text="0"
        android:textColor="@color/white"
        android:focusable="false"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >



            <Button
                android:id="@+id/buttonAC"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="40pt"
                android:text="AC"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange"
                android:onClick="clickOperation"/>

            <Button
                android:id="@+id/buttonC"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="40pt"
                android:text="C"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange"
                android:onClick="clickOperation"/>

            <Button
                android:id="@+id/buttonSQRT"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="40pt"
                android:text="SQRT"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange"
                android:onClick="clickOperation"/>

            <Button
                android:id="@+id/buttonDEV"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="40pt"
                android:text="/"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange"
                android:onClick="clickOperation"/>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <Button
                android:id="@+id/button7"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="40pt"
                android:text="7"
                android:textColor="@color/white"
                android:backgroundTint="@color/gray"
                android:onClick="clickNumber"
                />


            <Button
                android:id="@+id/button8"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="40pt"
                android:text="8"
                android:textColor="@color/white"
                android:backgroundTint="@color/gray"
                android:onClick="clickNumber"/>

            <Button
                android:id="@+id/button9"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="40pt"
                android:text="9"
                android:textColor="@color/white"
                android:backgroundTint="@color/gray"
                android:onClick="clickNumber"/>

            <Button
                android:id="@+id/buttonMul"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="40pt"
                android:text="x"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange"
                android:onClick="clickOperation"/>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <Button
                android:id="@+id/button4"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="40pt"
                android:text="4"
                android:textColor="@color/white"
                android:backgroundTint="@color/gray"
                android:onClick="clickNumber"/>

            <Button
                android:id="@+id/button5"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="40pt"
                android:text="5"
                android:textColor="@color/white"
                android:backgroundTint="@color/gray"
                android:onClick="clickNumber"/>

            <Button
                android:id="@+id/button6"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="40pt"
                android:text="6"
                android:textColor="@color/white"
                android:backgroundTint="@color/gray"
                android:onClick="clickNumber"/>

            <Button
                android:id="@+id/buttonMinus"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="40pt"
                android:text="-"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange"
                android:onClick="clickOperation"/>



        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">


            <Button
                android:id="@+id/button1"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="40pt"
                android:text="1"
                android:textColor="@color/white"
                android:backgroundTint="@color/gray"
                android:onClick="clickNumber"/>

            <Button
                android:id="@+id/button2"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="40pt"
                android:text="2"
                android:textColor="@color/white"
                android:backgroundTint="@color/gray"
                android:onClick="clickNumber"/>

            <Button
                android:id="@+id/button3"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="40pt"
                android:text="3"
                android:textColor="@color/white"
                android:backgroundTint="@color/gray"
                android:onClick="clickNumber"/>


            <Button
                android:id="@+id/buttonPlus"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="40pt"
                android:text="+"
                android:textColor="@color/white"
                android:backgroundTint="@color/orange"
                android:onClick="clickOperation"/>



        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">


            <Button
                android:id="@+id/button000"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="40pt"
                android:text="000"
                android:textColor="@color/white"
                android:backgroundTint="@color/gray"
                android:onClick="clickNumber"/>

            <Button
                android:id="@+id/button0"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="40pt"
                android:text="0"
                android:textColor="@color/white"
                android:backgroundTint="@color/gray"
                android:onClick="clickNumber"/>

            <Button
                android:id="@+id/buttonPoint"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="40pt"
                android:text="."
                android:textColor="@color/white"
                android:backgroundTint="@color/gray"
                android:onClick="clickOperation"/>


            <Button
                android:id="@+id/buttonEquals"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:width="30pt"
                android:height="40pt"
                android:text="="
                android:textColor="@color/white"
                android:backgroundTint="@color/orange"
                android:onClick="clickOperation"/>



        </TableRow>

    </TableLayout>

</LinearLayout>