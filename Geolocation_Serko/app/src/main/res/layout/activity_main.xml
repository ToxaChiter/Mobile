<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_blue"
        tools:context=".MainActivity">

    <RelativeLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:context=".MainActivity">
        <ImageButton
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tooltipText="Developed by A Serko"
                android:background="@color/white"
                android:src="@drawable/info">



        </ImageButton>
        <TextView
                android:id="@+id/serko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alexandra Serko"
                android:textSize="18sp"
                android:layout_below="@id/info"

                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp"/>
        <TextView
                android:id="@+id/locationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📍 Location Info"
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:layout_below="@id/serko"

                android:layout_marginBottom="16dp"/>

        <TextView
                android:id="@+id/speedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚡ Speed: "
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:layout_below="@id/locationTextView"
                android:layout_marginTop="16dp"/>

        <TextView
                android:id="@+id/altitudeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⛰️ Altitude: "
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:layout_below="@id/speedTextView"
                android:layout_marginTop="16dp"/>


        <TextView
                android:id="@+id/satelliteCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🛰️ Number of Satellites: "
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:layout_below="@id/altitudeTextView"
                android:layout_marginTop="16dp"/>
        <TextView
                android:id="@+id/shakingDirectionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⛰️ Shaking Direction: "
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:layout_below="@id/satelliteCountTextView"
                android:layout_marginTop="16dp"/>
        <TextView
                android:id="@+id/doneserko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done by A Serko "
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:layout_below="@id/shakingDirectionTextView"
                android:layout_marginTop="16dp"/>
        <ImageView
                android:id="@+id/arrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/up"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
